#!/bin/sh
# postinst script for mica-server
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)

    	RET=""
      db_get mica-server/admin_password

      if [ -z "$2" ] && [ "$RET" != "" ] ; then
        echo Updating administrator password.
        # hash the password and escape the possible '$/&' characters
        adminpw=$(echo -n $RET | xargs java -jar /usr/share/mica-server-*/tools/lib/password-hasher-*-cli.jar | sed -e 's/\([\$\/\/]\)/\\\1/g' | cut -d ' ' -f 1)
        tfile=`mktemp`
        if [ ! -f "$tfile" ]; then
          return 1
        fi
        cat /etc/mica-server/shiro.ini | sed -e "s/^administrator\s*=.*,/administrator=$adminpw,/" > $tfile && \
          mv $tfile /etc/mica-server/shiro.ini
        # clear password in db_get so it won't be re-encoded during next upgrade
        db_set mica-server/admin_password ""
      fi

    	# Create mica-server user if it doesn't exist.
      if ! id mica-server > /dev/null 2>&1 ; then
        adduser --system --home /var/lib/mica-server --no-create-home --disabled-password mica-server
      fi

      # Mica Server file structure on Debian
      # /etc/mica-server: configuration
      # /usr/share/mica-server: executable
      # /var/lib/mica-server: data runtime
      # /var/log: logs

      rm -f /usr/share/mica-server
      ln -s /usr/share/mica-server-* /usr/share/mica-server

      if [ ! -e /var/lib/mica-server/conf ] ; then
        ln -s /etc/mica-server /var/lib/mica-server/conf
      fi

      chown -R mica-server:adm /var/lib/mica-server /var/log/mica-server /etc/mica-server /tmp/mica-server
      chmod -R 750      /var/lib/mica-server /var/log/mica-server /etc/mica-server/ /tmp/mica-server
      chmod +x /usr/share/mica-server/tools/shiro-hasher
      find /etc/mica-server/ -type f | xargs chmod 640

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
