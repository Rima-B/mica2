[
  {
    "type": "fieldset",
    "items": [
      {
        "type": "section",
        "htmlClass": "row",
        "items": [
          {
            "type": "section",
            "htmlClass": "col-xs-6",
            "items": [
              {
                "key": "selectionCriteria.gender",
                "titleMap": {
                  "men": "t(study.selection-criteria.gender.men)",
                  "women": "t(study.selection-criteria.gender.women)"
                }
              },
              {
                "key": "selectionCriteria.ageMin"
              },
              {
                "key": "selectionCriteria.ageMax"
              },
              {
                "key": "selectionCriteria.otherCriteria"
              },
              {
                "key": "selectionCriteria.info"
              },
              {
                "key": "selectionCriteria.countriesIso",
                "type":"obibaCountriesUiSelect"
              },
              {
                "key": "selectionCriteria.territory"
              }
            ]
          },
          {
            "type": "section",
            "htmlClass": "col-xs-6",
            "items": [
              {
                "key": "selectionCriteria.healthStatus",
                "add": "t(study.selection-criteria.add-health-status)",
                "style": {
                  "add": "btn-info"
                },
                "items": [
                  {
                    "key": "selectionCriteria.healthStatus[]",
                    "notitle": true
                  }
                ]
              },
              {
                "key": "selectionCriteria.ethnicOrigin",
                "add": "t(study.selection-criteria.add-ethnic-origin)",
                "style": {
                  "add": "btn-info"
                },
                "items": [
                  {
                    "key": "selectionCriteria.ethnicOrigin[]",
                    "notitle": true
                  }
                ]
              },
              {
                "key": "selectionCriteria.criteria"
              }
            ]
          }
        ]
      },
      {
        "type": "section",
        "htmlClass": "row",
        "items": [
          {
            "type": "section",
            "htmlClass": "col-xs-6",
            "items": [
              "numberOfParticipants"
            ]
          },
          {
            "type": "section",
            "htmlClass": "col-xs-6",
            "items": [
              {
                "key": "recruitment",
                "items": [
                  {
                    "key": "recruitment.info"
                  },
                  {
                    "key": "recruitment.dataSources",
                    "notitle": true
                  },
                  {
                    "type": "tabs",
                    "tabs": [
                      {
                        "title": "t(study.recruitment-sources.general-population)",
                        "items": [
                          {
                            "key": "recruitment.generalPopulationSources",
                            "notitle": true,
                            "condition": "model.recruitment.dataSources.indexOf(\"general_population\")!=-1"
                          }
                        ]
                      },
                      {
                        "title": "t(study.recruitment-sources.specific-population)",
                        "items": [
                          {
                            "key": "recruitment.specificPopulationSources",
                            "notitle": true,
                            "condition": "model.recruitment.dataSources.indexOf(\"specific_population\")!=-1"
                          }
                        ]
                      },
                      {
                        "title": "t(study.recruitment-sources.studies)",
                        "items": [
                          {
                            "key": "recruitment.studies",
                            "notitle": true,
                            "add": "t(study.recruitment-sources.add-study)",
                            "style": {
                              "add": "btn-info"
                            },
                            "items": [
                              {
                                "key": "recruitment.studies[]",
                                "notitle": true
                              }
                            ],
                            "condition": "model.recruitment.dataSources.indexOf(\"exist_studies\")!=-1"
                          }
                        ]
                      },
                      {
                        "title": "t(study.recruitment-sources.other)",
                        "items": [
                          {
                            "key": "recruitment.otherSource",
                            "condition": "model.recruitment.dataSources.indexOf(\"other\")!=-1"
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
]
